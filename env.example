# Clerk Authentication
# Get your keys from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
CLERK_SECRET_KEY=sk_test_YOUR_KEY_HERE

# Database
DATABASE_URL="file:./dev.db"

# AI Processing Mode
# local = Use only local Ollama (default, most private)
# cloud = Use OpenAI API
# hybrid = Try local first, fallback to cloud
AI_MODE=local
ALLOW_CLOUD_FALLBACK=false
PRIVACY_DEFAULT=local-only

# Ollama Configuration (for local AI)
# Install from https://ollama.ai
# Pull model: ollama pull llama3.1:8b
# Pull embeddings: ollama pull nomic-embed-text
LOCAL_OLLAMA_URL=http://localhost:11434

# Local Transcription Service (faster-whisper)
# TODO: Set up FastAPI service at localhost:8000
LOCAL_WHISPER_URL=http://localhost:8000

# OpenAI API (Only used if AI_MODE=cloud or hybrid)
# Get your key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-YOUR_KEY_HERE

# Email Service (Resend)
# Get your API key from https://resend.com/api-keys
# Required for sending invitation emails
RESEND_API_KEY=re_YOUR_KEY_HERE

# Email "From" Address (optional)
# For testing: onboarding@resend.dev (works automatically)
# For production: use your verified domain (e.g., noreply@yourdomain.com)
# If not set, defaults to onboarding@resend.dev for testing
RESEND_FROM_EMAIL=onboarding@resend.dev

# Application URL
# Used for generating links in emails (invitation links, etc.)
# For local development: http://localhost:3000
# For production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

